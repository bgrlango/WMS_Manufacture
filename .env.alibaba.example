# Alibaba Cloud Configuration Example
# Copy to .env and update with your actual credentials

# ==================================================
# ALIBABA CLOUD CREDENTIALS
# ==================================================
ALIBABA_ACCESS_KEY_ID=your_access_key_id_here
ALIBABA_ACCESS_KEY_SECRET=your_access_key_secret_here
ALIBABA_REGION=ap-southeast-1

# ==================================================
# APSARADB RDS MYSQL (MANAGED DATABASE)
# ==================================================
# Get these values from Alibaba Cloud RDS console
DB_HOST=rm-xxxxx.mysql.rds.aliyuncs.com
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_strong_password
DB_NAME=wms_manufacture

# Optional: MySQL SSL/TLS for secure connection
DB_SSL_ENABLED=true
DB_SSL_CA_PATH=/path/to/ca.pem

# ==================================================
# ALIBABA OSS (OBJECT STORAGE SERVICE)
# ==================================================
# For file storage, backups, and static assets
OSS_ENDPOINT=https://oss-ap-southeast-1.aliyuncs.com
OSS_BUCKET_NAME=wms-manufacturing-bucket
OSS_REGION=ap-southeast-1
OSS_ACCESS_KEY_ID=${ALIBABA_ACCESS_KEY_ID}
OSS_ACCESS_KEY_SECRET=${ALIBABA_ACCESS_KEY_SECRET}

# ==================================================
# ALIBABA MESSAGE QUEUE (OPTIONAL)
# ==================================================
# For async processing and event streaming
MQ_ENDPOINT=amqp://mq-instance-id.ap-southeast-1.aliyuncs.com:5672
MQ_QUEUE_NAME=wms_commands_queue
MQ_TOPIC_NAME=wms_events
MQ_CONSUMER_GROUP=wms_consumer_group

# ==================================================
# SERVICE CONFIGURATION
# ==================================================
# Command Service (Node.js)
COMMAND_SERVICE_PORT=3108
NODE_ENV=production

# Query Service (FastAPI)
QUERY_SERVICE_PORT=2025
PYTHON_ENV=production

# ==================================================
# NETWORKING & SECURITY
# ==================================================
# Alibaba Cloud VPC configuration
VPC_ID=vpc-xxxxx
SECURITY_GROUP_ID=sg-xxxxx

# ECS Instance Details (if using ECS)
ECS_INSTANCE_ID=i-xxxxx
ECS_PRIVATE_IP=172.16.x.x

# ==================================================
# LOGGING & MONITORING
# ==================================================
# Alibaba Cloud Log Service
LOG_SERVICE_ENDPOINT=cn-shanghai.log.aliyuncs.com
LOG_SERVICE_PROJECT=wms-manufacturing
LOG_SERVICE_LOGSTORE=application-logs

# ==================================================
# BACKUP & DISASTER RECOVERY
# ==================================================
# Automated backup configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_TIME=02:00
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=oss://wms-backups/

# ==================================================
# REGIONAL ENDPOINTS (Choose appropriate region)
# ==================================================
# For Singapore: ap-southeast-1
# For Jakarta: ap-southeast-5
# For Tokyo: ap-northeast-1
# For US East: us-east-1
